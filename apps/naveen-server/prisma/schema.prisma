datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt   DateTime  @default(now())
  description String?
  endDate     DateTime?
  id          String    @id @default(cuid())
  name        String?
  startDate   DateTime?
  updatedAt   DateTime  @updatedAt
  url         String?
}

model Skill {
  createdAt   DateTime              @default(now())
  id          String                @id @default(cuid())
  name        String?
  proficiency EnumSkillProficiency?
  updatedAt   DateTime              @updatedAt
}

model ContactInfo {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  linkedIn  String?
  phone     String?
  updatedAt DateTime @updatedAt
}

model Testimonial {
  authorName  String?
  authorTitle String?
  content     String?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumSkillProficiency {
  Option1
}
